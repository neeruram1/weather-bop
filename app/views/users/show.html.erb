<h1>welcome, <%= current_user.name %></h1>
  <p>it's a great day to be in <%= @weather_music.location.split(",")[0] %></p>

  <div class="current-temp">
    <h1><%= @weather_music.forecast_temp %>°<h1>
  </div>


  <div class="forecast-details">
    <p>city: <%= @weather_music.forecast_city_name.downcase %></p>
    <p>country: <%= @weather_music.forecast_country_name.downcase %></p>
    <p>description: <%= @weather_music.forecast_description.downcase %></p>
    <p>current low: <%= @weather_music.forecast_temp_min %>°</p>
    <p>current high: <%= @weather_music.forecast_temp_max %>°</p>
  </div>

<%= form_tag(dashboard_path, method: "get") do %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= select_tag(:state, options_for_select(us_states), { include_blank: true }) %>
  <%= select_tag(:country, options_for_select(countries), { include_blank: true }) %>
  <%= submit_tag "weather-bop somewhere else!" %>
<% end %>
